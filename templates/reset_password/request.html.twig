{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1 text-center">
                                <h3>Réinitialiser mot de passe</h3>
                            </div>
                            <div class="content">
                                <div class="message-flash">
                                    {% for flash_error in app.flashes('reset_password_error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
                                </div>
                                {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                                <p>
                                    Saisissez l'adresse email que vous avez utilisée pour créer votre compte
                                    afin de recevoir un lien de réinitialisation de mot de passe.
                                </p>
                                <button class="btn btn-primary btn-block mx-auto d-block mb-3">Envoyer</button>
                                {{ form_end(requestForm) }}
                            </div>
                            <div class="form-note text-center">Vous n'avez pas de compte? <a href="{{ path('app_register')}}">Créez votre compte</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
